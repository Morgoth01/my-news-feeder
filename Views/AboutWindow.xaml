<Window x:Class="MyNewsFeeder.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="About MyNewsFeeder"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- App Info -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="My News Feeder"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                   Margin="0,0,0,8"/>
                        <TextBlock x:Name="VersionText"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="RSS/Atom Reader with AdBlocker"
                                   FontStyle="Italic"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Â© 2025 - Claude Peters"
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- GitHub Repository -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="GitHub Repository"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8"/>
                        <TextBlock>
                            <Hyperlink NavigateUri="https://github.com/Morgoth01/My-News-Feeder"
                                       RequestNavigate="Hyperlink_RequestNavigate"
                                       Foreground="{DynamicResource PrimaryHueMidBrush}">
                                https://github.com/Morgoth01/My-News-Feeder
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock Text="Source code, documentation, and issue tracking"
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Update Check -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Updates"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8"/>
                        <Button Content="Check for Updates"
                                Click="CheckUpdatesButton_Click"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="150"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,8"/>
                        <TextBlock Text="Check for the latest version and features"
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Third-Party Libraries -->
                <materialDesign:Card Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Third-Party Libraries"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,12"/>
                        
                        <!-- Microsoft WebView2 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Web" 
                                                     VerticalAlignment="Center" 
                                                     Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="Microsoft WebView2" FontWeight="SemiBold"/>
                                <TextBlock Text="Microsoft Software License Terms" 
                                           FontSize="11" 
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Material Design -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Palette" 
                                                     VerticalAlignment="Center" 
                                                     Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="Material Design In XAML Toolkit" FontWeight="SemiBold"/>
                                <TextBlock Text="MIT License" 
                                           FontSize="11" 
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- System.Text.Json -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="CodeJson" 
                                                     VerticalAlignment="Center" 
                                                     Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="System.Text.Json" FontWeight="SemiBold"/>
                                <TextBlock Text="MIT License" 
                                           FontSize="11" 
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Microsoft.Extensions.Http -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Web" 
                                                     VerticalAlignment="Center" 
                                                     Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="Microsoft.Extensions.Http" FontWeight="SemiBold"/>
                                <TextBlock Text="MIT License" 
                                           FontSize="11" 
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Text="All third-party libraries are used in accordance with their respective licenses."
                                   FontSize="11"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Close Button -->
                <Button Content="Close"
                        Click="CloseButton_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        HorizontalAlignment="Right"
                        Width="100"
                        Margin="0,8,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>