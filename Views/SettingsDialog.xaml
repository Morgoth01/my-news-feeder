<Window x:Class="MyNewsFeeder.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings"
        Height="350"
        Width="450"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="0"
                      Margin="20">
            <StackPanel>
                <TextBlock Text="Application Settings"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           Margin="0,0,0,20"/>

                <!-- Dark Mode Setting -->
                <CheckBox Content="Dark Mode"
                          IsChecked="{Binding DarkMode}"
                          Margin="0,10"/>

                <!-- Auto Refresh Setting -->
                <CheckBox Content="Auto Refresh"
                          IsChecked="{Binding AutoRefresh}"
                          Margin="0,10"/>

                <!-- Max Items Setting -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,10">
                    <TextBlock Text="Max Items:"
                               VerticalAlignment="Center"
                               Width="100"/>
                    <TextBox Text="{Binding MaxItems}"
                             Width="100"/>
                </StackPanel>

                <!-- Font Size Setting -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,10">
                    <TextBlock Text="Font Size:"
                               VerticalAlignment="Center"
                               Width="100"/>
                    <TextBox Text="{Binding FontSize}"
                             Width="100"/>
                </StackPanel>

                <!-- Refresh Interval Setting -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,10">
                    <TextBlock Text="Refresh Interval (min):"
                               VerticalAlignment="Center"
                               Width="150"/>
                    <TextBox Text="{Binding RefreshInterval}"
                             Width="100"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="20">
            <Button Content="OK"
                    Command="{Binding OkCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="5"/>
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Window>